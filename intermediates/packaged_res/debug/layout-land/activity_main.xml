<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/morti_horizontal">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_AC"
        style="@style/MyCoolStyle"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_marginEnd="8dp"
        android:onClick="button1_onClick"
        android:text="@string/_AC"
        app:layout_constraintEnd_toStartOf="@+id/button_dot"
        app:layout_constraintTop_toBottomOf="@+id/EditText1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_dot"

        style="@style/MyCoolStyle"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="138dp"
        android:onClick="button1_onClick"
        android:text="@string/_dot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_pro"
        app:layout_constraintTop_toBottomOf="@+id/EditText1" />

    <EditText
        android:id="@+id/EditText1"
        style="@style/MyEditStyle"
        android:layout_width="284dp"
        android:layout_height="175dp"
        android:layout_marginStart="271dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="271dp"
        android:layout_weight="1"
        android:hapticFeedbackEnabled="false"
        android:text=" 0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton

        android:id="@+id/button0.1"
        style="@style/MyCoolStyle"
        android:layout_width="@dimen/buttonSize1"
        android:layout_height="@dimen/buttonSize1"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="48dp"
        android:onClick="button1_onClick"
        android:text="@string/_1"
        app:layout_constraintEnd_toStartOf="@+id/button0.3"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button0.2"
        style="@style/MyCoolStyle"
        android:layout_width="@dimen/buttonSize1"
        android:layout_height="@dimen/buttonSize1"
        android:layout_marginStart="47dp"
        android:layout_marginTop="30dp"
        android:onClick="button1_onClick"
        android:text="@string/_2"
        app:layout_constraintStart_toEndOf="@+id/EditText1"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button0.3"
        style="@style/MyCoolStyle"
        android:layout_width="@dimen/buttonSize1"
        android:layout_height="@dimen/buttonSize1"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="47dp"
        android:onClick="button1_onClick"
        android:text="@string/_3"
        app:layout_constraintEnd_toStartOf="@+id/EditText1"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button0.4"
        style="@style/MyCoolStyle"
        android:layout_width="@dimen/buttonSize1"
        android:layout_height="@dimen/buttonSize1"
        android:layout_marginStart="48dp"
        android:layout_marginTop="30dp"
        android:onClick="button1_onClick"
        android:text="@string/_4"
        app:layout_constraintStart_toEndOf="@+id/button0.2"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton

        android:id="@+id/button0.5"
        style="@style/MyCoolStyle"
        android:layout_width="@dimen/buttonSize1"
        android:layout_height="@dimen/buttonSize1"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="48dp"
        android:onClick="button1_onClick"
        android:text="@string/_5"
        app:layout_constraintEnd_toStartOf="@+id/button0.7"
        app:layout_constraintTop_toBottomOf="@+id/button0.1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button0.6"
        style="@style/MyCoolStyle"
        android:layout_width="@dimen/buttonSize1"
        android:layout_height="@dimen/buttonSize1"
        android:layout_marginStart="48dp"
        android:layout_marginTop="29dp"
        android:onClick="button1_onClick"
        android:text="@string/_6"
        app:layout_constraintStart_toEndOf="@+id/button0.8"
        app:layout_constraintTop_toBottomOf="@+id/button0.4" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button0.7"
        style="@style/MyCoolStyle"
        android:layout_width="@dimen/buttonSize1"
        android:layout_height="@dimen/buttonSize1"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="47dp"
        android:background="@drawable/button_stile"
        android:onClick="button1_onClick"
        android:text="@string/_7"
        app:layout_constraintEnd_toStartOf="@+id/EditText1"
        app:layout_constraintTop_toBottomOf="@+id/button0.3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button0.8"
        style="@style/MyCoolStyle"
        android:layout_width="@dimen/buttonSize1"
        android:layout_height="@dimen/buttonSize1"
        android:layout_marginStart="47dp"
        android:layout_marginTop="29dp"
        android:onClick="button1_onClick"
        android:text="@string/_8"
        app:layout_constraintStart_toEndOf="@+id/EditText1"
        app:layout_constraintTop_toBottomOf="@+id/button0.2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button0.9"
        style="@style/MyCoolStyle"
        android:layout_width="@dimen/buttonSize1"
        android:layout_height="@dimen/buttonSize1"
        android:layout_marginTop="157dp"
        android:layout_marginEnd="95dp"
        android:onClick="button1_onClick"
        android:text="@string/_9"
        app:layout_constraintEnd_toStartOf="@+id/EditText1"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button0.0"
        style="@style/MyCoolStyle"
        android:layout_width="@dimen/buttonSize1"
        android:layout_height="@dimen/buttonSize1"
        android:layout_marginStart="95dp"
        android:layout_marginTop="157dp"
        android:onClick="button1_onClick"
        android:text="@string/_0"
        app:layout_constraintStart_toEndOf="@+id/EditText1"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_plus"
        style="@style/MyCoolStyle"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:onClick="operation"
        android:text="@string/_plus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button0.5" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_multiply"
        style="@style/MyCoolStyle"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_marginStart="4dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:onClick="operation"
        android:text="@string/_multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button0.0"
        app:layout_constraintTop_toBottomOf="@+id/button0.6" />

    <com.google.android.material.button.MaterialButton

        android:id="@+id/button_share"
        style="@style/MyCoolStyle"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="66dp"
        android:onClick="operation"
        android:text="@string/_share"
        app:layout_constraintEnd_toStartOf="@+id/button_multiply"
        app:layout_constraintTop_toBottomOf="@+id/button0.8" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        style="@style/MyCoolStyle"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="0dp"
        android:layout_gravity="end"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/maidens_song_dingbats"
        android:text="i"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_pro"
        style="@style/MyCoolStyle"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_marginEnd="8dp"
        android:onClick="clickPercent"
        android:text="@string/_pro"
        app:layout_constraintEnd_toStartOf="@+id/button_equals"
        app:layout_constraintTop_toBottomOf="@+id/EditText1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_minus"
        style="@style/MyCoolStyle"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="21dp"
        android:onClick="operation"
        android:text="@string/_minus"
        app:layout_constraintEnd_toStartOf="@+id/button_AC"
        app:layout_constraintTop_toBottomOf="@+id/button0.7" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_equals"
        style="@style/MyCoolStyle"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="138dp"
        android:onClick="Equals"
        android:text="@string/_equals"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_share"
        app:layout_constraintTop_toBottomOf="@+id/EditText1" />

</androidx.constraintlayout.widget.ConstraintLayout>


